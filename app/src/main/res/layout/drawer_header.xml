<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/drawer_header_height"
    android:background="?attr/colorPrimary"
    android:gravity="bottom"
    android:orientation="vertical"
    android:padding="@dimen/drawer_header_padding"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    android:fitsSystemWindows="true">

    <ImageView
        android:id="@+id/drawer_header_icon"
        android:layout_width="@dimen/drawer_header_icon_size"
        android:layout_height="@dimen/drawer_header_icon_size"
        android:layout_marginBottom="@dimen/drawer_header_icon_margin"
        android:contentDescription="@string/app_icon_description"
        android:src="@mipmap/ic_launcher"
        android:background="@drawable/circle_background_white"
        android:padding="8dp"
        android:scaleType="centerInside"
        app:tint="?attr/colorPrimary" />

    <TextView
        android:id="@+id/drawer_header_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="@string/app_name"
        android:textColor="?attr/colorOnPrimary"
        android:textSize="@dimen/text_size_large"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium" />

    <TextView
        android:id="@+id/drawer_header_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/drawer_header_subtitle"
        android:textColor="?attr/colorOnPrimary"
        android:textSize="@dimen/text_size_small"
        android:alpha="0.87"
        android:fontFamily="sans-serif" />

</LinearLayout>
