<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingStart="24dp"
    android:paddingEnd="24dp">

    <ImageView
        android:id="@+id/drawer_item_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="32dp"
        android:contentDescription="@string/drawer_item_icon_description"
        android:scaleType="centerInside"
        app:tint="?attr/colorOnSurface" />

    <TextView
        android:id="@+id/drawer_item_text"
        style="@style/OneUICustomTextAppearance"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ellipsize="end"
        android:maxLines="1" />

    <ImageView
        android:id="@+id/drawer_item_arrow"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:contentDescription="@string/drawer_item_arrow_description"
        android:scaleType="centerInside"
        android:src="@drawable/ic_oui_arrow_right"
        android:visibility="gone"
        app:tint="?attr/colorOnSurface"
        android:alpha="0.6" />

</LinearLayout>
