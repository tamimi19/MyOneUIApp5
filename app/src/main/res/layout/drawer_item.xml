<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/drawer_item_height"
    android:background="@drawable/drawer_item_background"
    android:clickable="true"
    android:focusable="true"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingStart="@dimen/drawer_item_padding_horizontal"
    android:paddingEnd="@dimen/drawer_item_padding_horizontal">

    <ImageView
        android:id="@+id/drawer_item_icon"
        android:layout_width="@dimen/drawer_item_icon_size"
        android:layout_height="@dimen/drawer_item_icon_size"
        android:layout_marginEnd="@dimen/drawer_item_icon_margin_end"
        android:contentDescription="@string/drawer_item_icon_description"
        android:scaleType="centerInside"
        app:tint="?attr/colorOnSurface" />

    <TextView
        android:id="@+id/drawer_item_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ellipsize="end"
        android:maxLines="1"
        android:textAppearance="@style/OneUIDrawerItemTextAppearance"
        android:textColor="?attr/colorOnSurface" />

    <ImageView
        android:id="@+id/drawer_item_arrow"
        android:layout_width="@dimen/drawer_item_arrow_size"
        android:layout_height="@dimen/drawer_item_arrow_size"
        android:layout_marginStart="@dimen/drawer_item_arrow_margin_start"
        android:contentDescription="@string/drawer_item_arrow_description"
        android:scaleType="centerInside"
        android:src="@drawable/ic_arrow_forward"
        android:visibility="gone"
        app:tint="?attr/colorOnSurface"
        android:alpha="0.6" />

</LinearLayout>
